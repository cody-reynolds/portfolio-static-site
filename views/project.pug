extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box


        h1= project.project_name

        p= project.description

      .project-tech-links-box.box
        h6 Technologies
        ul

          each technology in project.technologies
            li= technology

        a.btn-link(href=`${project.live_link}` target="_blank") Live Demo
        a.btn-link(href=`${project.github_link}` target="_blank") GitHub Repo

    .project-img-box.box

      -const landscapes = project.image_urls.slice(1);
      each image_url in landscapes
        img.project-img(src=`${image_url}`, alt="An example of the project running in the browser.")

    nav.nav
      a(href='/')
        span &larr;
        |  Back
